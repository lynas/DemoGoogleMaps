<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageViewMapRefreshImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textViewMapRefreshName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dp"
        android:layout_toRightOf="@+id/imageViewMapRefreshImage"
        android:text="Large Text"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewMapRefreshStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewMapRefreshImage"
        android:layout_alignParentRight="true"
        android:text=""
        android:textColor="#CC0000" />

</RelativeLayout>
