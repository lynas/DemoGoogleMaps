<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewIndicatorColor"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFA500"
        android:text="" />

    <TextView
        android:id="@+id/textViewTruckInfoInEach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewIndicatorColor"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textViewIndicatorColor"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="TextView"
        android:textColor="#4653DF" />

    <TextView
        android:id="@+id/textViewTruckNameEach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTruckInfoInEach"
        android:layout_alignRight="@+id/textViewTruckInfoInEach"
        android:layout_alignTop="@+id/textViewIndicatorColor"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>