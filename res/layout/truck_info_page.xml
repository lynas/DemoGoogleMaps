<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6" >

    <RelativeLayout
        android:id="@+id/innerLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_margin="10dp"
        
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Last Update"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFA500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewLastUpdateDetailsInfo"
            android:layout_marginTop="10dp"
            android:text="Location"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFA500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewLocationDetailsInfo"
            android:layout_marginTop="10dp"
            android:text="Latitude/Longitude"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFA500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewLastUpdateDetailsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:text="9/10/2014 4:59 PM (CST)" />

        <TextView
            android:id="@+id/textViewLocationDetailsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:text="S Schoolhouse Rd/Constitution Rd, New Lenox, IL 60451" />

        <TextView
            android:id="@+id/textViewLatitudeLongitudeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView3"
            android:text="41.49294,-87.92049" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewLatitudeLongitudeDetails"
            android:layout_marginTop="10dp"
            android:text="Speed/Course"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFA500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSpeedCourseDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView5"
            android:text="100.0 mph, SW (210 deg)" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewSpeedCourseDetails"
            android:layout_marginTop="10dp"
            android:text="Status"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFA500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewStatusDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView7"
            android:text="TextView" />

        <Button
            android:id="@+id/buttonShowInMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="#5f9cc5"
            android:text="Show In map" />

        <Button
            android:id="@+id/ButtonLastFiveLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonShowInMap"
            android:layout_alignLeft="@+id/buttonShowInMap"
            android:layout_alignRight="@+id/buttonShowInMap"
            android:background="#5f9cc5"
            android:text="Last 5 Location"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>

</RelativeLayout>